<h2>Hi, <%= @use_name %></h2>
<h3>Add a bike listing</h3>

<div class="form-fields">
  <%= simple_form_for [:account, @bike] do |f| %>
    <%= f.input :name, :label => 'Name of your bike' %>
    <%= f.input :price, :label => 'Price per day' %>
    <%= f.input :condition %>
    <%= f.input :location %>
    <%= f.input :description %>
    <%= f.label :availability, 'Availability?' %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "post this bike", class: "btn btn-primary" %>
  <% end %>
</div>
