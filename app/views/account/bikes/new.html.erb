

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <h2>Hi, <%= @use_name %></h2>
      <h3>Add a bike listing</h3>

      <div class="form-fields">
        <%= simple_form_for @bike do |f| %>
          <%= f.input :name, :label => 'Name of your bike' %>
          <%= f.input :price, :label => 'Price per day' %>
          <%= f.input :condition %>
          <%= f.input :location %>
          <%= f.input :description %>
          <%= f.label :availability, 'Availability?' %>
          <%= f.input :availability, :label => 'check if available' %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "post this bike", class: "btn btn-primary" %>
        <% end %>
      </div>


    </div>
  </div>
</div>

